<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2 mt-1">
            <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div>
                    <h3>Create A New Listing</h3>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="Enter Title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid title.
                    </div>
                </div>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="Enter Description"
                        type="text" required></textarea>
                    <div class="invalid-feedback">
                        Please provide a valid description.
                    </div>
                </div>
                <div>
                    <label for="image" class="form-label">Image</label>
                    <input type="url" name="listing[image]" class="form-control" placeholder="Enter Image" required>
                    <div class="invalid-feedback">
                        Please select a valid image.
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-sm-10">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" class="form-control" placeholder="Enter Price"
                            required>
                        <div class="invalid-feedback">
                            Please valid price.
                        </div>
                    </div>
                    <div class="col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" class="form-control" placeholder="Enter Country"
                            required>
                        <div class="invalid-feedback">
                            Please provide a valid country.
                        </div>
                    </div>
                </div>
                <div>
                    <label for="Location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" class="form-control" placeholder="Enter Location"
                        required>
                    <div class="invalid-feedback">
                        Please provide a valid location.
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Add</button>
                <br>
            </form>
        </div>
    </div>